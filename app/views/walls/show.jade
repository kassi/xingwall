extends ../layout

block js
  script(src='/components/angular/angular.min.js')
  script(src='/socket.io/socket.io.js')
  script.
    var socket = io();

block content
  .wall(ng-cloak ng-app='xingwall' xingwall=wall_id)

    section.wall-section.wall-profiles
      ul
        li(ng-repeat='profile in profiles')
          a.wall-profile-entry(href="#" ng-click='setCurrentProfile(profile)' ng-class='{ active: profile.isActive }')
            img(ng-src="{{profile.photoUrls.size_128x128}}")

    section.wall-section.wall-details
      h1= "{{currentProfile.displayName}}"
      img.profile-photo(ng-src="{{currentProfile.photoUrls.size_256x256}}")

    section.wall-section.wall-actions
      .wall-actions-shell
        button.btn.action(ng-click='openPopup()') Connect with XING

block footer_js
  script(src='/js/client.js')
