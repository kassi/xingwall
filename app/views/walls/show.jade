extends ../layout

block js
  script(src='/components/jquery/dist/jquery.min.js')
  script(src='/components/angular/angular.min.js')
  script(src='/socket.io/socket.io.js')
  script(src='/js/vendor/qrcode.js')
  script.
    var socket = io();

block content
  div(ng-cloak ng-app='xingwall' xingwall=wall_id)
    #overlay(ng-click='setCurrentProfile($event, false)' ng-class='{active: currentProfile}')

    .qr-wrapper
      .qr-title.intro Connect
      #qr
      .qr-title with XING

    .intro-switch(title="Toggle introduction mode")

    section.wall-details(ng-class='{active: currentProfile}')
      a.close(href="#" ng-click='setCurrentProfile($event, false)') &times;

      .col.photo
        img.profile-photo(ng-src="{{currentProfilePhotoUrl}}")

      .col.info
        h1= "{{displayProfile.displayName}}"

        p.content-line(ng-if="displayProfile.wants")
          strong Wants
          = "{{displayProfile.wants}}"

        p.content-line(ng-if="displayProfile.haves")
          strong Haves
          = "{{displayProfile.haves}}"

        //h2 Web Profiles

        .content-line(ng-if="displayProfile.webProfiles.homepage.length")
          strong Homepage
          ul
            li(ng-repeat='link in displayProfile.webProfiles.homepage')
              a(href="{{link}}" target="_blank")= "{{link}}"

        .content-line(ng-if="displayProfile.webProfiles.facebook.length")
          strong Facebook
          ul
            li(ng-repeat='link in displayProfile.webProfiles.facebook')
              a(href="{{link}}" target="_blank")= "{{link}}"

        .content-line(ng-if="displayProfile.webProfiles.twitter.length")
          strong Twitter
          ul
            li(ng-repeat='link in displayProfile.webProfiles.twitter')
              a(href="{{link}}" target="_blank")= "{{link}}"

        .content-line(ng-if="displayProfile.webProfiles['google+'].length")
          strong Google+
          ul
            li(ng-repeat='link in displayProfile.webProfiles["google+"]')
              a(href="{{link}}" target="_blank")= "{{link}}"

        .content-line(ng-if="displayProfile.webProfiles.amazon.length")
          strong Amazon
          ul
            li(ng-repeat='link in displayProfile.webProfiles.amazon')
              a(href="{{link}}" target="_blank")= "{{link}}"

        .content-line(ng-if="displayProfile.webProfiles.ebay.length")
          strong Ebay
          ul
            li(ng-repeat='link in displayProfile.webProfiles.ebay')
              a(href="{{link}}" target="_blank")= "{{link}}"

        .content-line(ng-if="displayProfile.webProfiles.youtube.length")
          strong YouTube
          ul
            li(ng-repeat='link in displayProfile.webProfiles.youtube')
              a(href="{{link}}" target="_blank")= "{{link}}"

        .content-line(ng-if="displayProfile.webProfiles.yelp.length")
          strong Yelp
          ul
            li(ng-repeat='link in displayProfile.webProfiles.yelp')
              a(href="{{link}}" target="_blank")= "{{link}}"

        .content-line(ng-if="displayProfile.webProfiles.reddit.length")
          strong Reddit
          ul
            li(ng-repeat='link in displayProfile.webProfiles.reddit')
              a(href="{{link}}" target="_blank")= "{{link}}"

        .content-line(ng-if="displayProfile.webProfiles.foursquare.length")
          strong Foursquare
          ul
            li(ng-repeat='link in displayProfile.webProfiles.foursquare')
              a(href="{{link}}" target="_blank")= "{{link}}"

        .content-line(ng-if="displayProfile.webProfiles.flickr.length")
          strong Flickr
          ul
            li(ng-repeat='link in displayProfile.webProfiles.flickr')
              a(href="{{link}}" target="_blank")= "{{link}}"


    .wall
      .wall-content
        section.wall-profiles
          ul
            li(ng-repeat='profile in profiles')
              a.wall-profile-entry(href='#' ng-click='setCurrentProfile($event, profile)' ng-class='{ active: profile.isActive }')
                img(ng-src="{{profile.photoUrls.size_128x128}}")


block footer_js
  script(src='/js/grid.js')
  script(src='/js/client.js')
  script(src='/js/qr.js')
  script(src='/js/introduction.js')
  script(src='/js/swipe.js')
  script(src='/js/keys.js')
